{
    "manifest_version": 2,
    "name": "PassKey Wallet Desktop Connector",
    "version": "1.0.1",
    "description": "Companion extension for the PassKey Wallet desktop application. Detects login fields to autofill credentials from your local vault.",
    "permissions": [
        "activeTab",
        "tabs",
        "nativeMessaging",
        "<all_urls>"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "passkey-wallet@passkey-wallet.com",
            "data_collection_permissions": {
                "required": [
                    "none"
                ],
                "optional": []
            }
        }
    }
}