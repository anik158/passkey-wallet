{
  "name": "passkey-wallet",
  "private": true,
  "version": "0.4.4",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:native-host && vite build && electron-builder",
    "build:native-host": "pkg browser-extension/native-host.js --targets node18-win-x64,node18-linux-x64,node18-macos-x64 --output browser-extension/dist/native-host",
    "preview": "vite preview",
    "load-extension": "node scripts/load-extension.js"
  },
  "devDependencies": {
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "electron-vite": "^5.0.0",
    "pkg": "^5.8.1",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.8",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "description": "A secure, local-first password manager",
  "author": {
    "name": "Ahsan",
    "email": "contact@ahsanulhouqe.com"
  },
  "main": "dist-electron/index.js",
  "dependencies": {
    "active-win": "^8.2.1",
    "argon2": "^0.44.0",
    "axios": "^1.13.4",
    "better-sqlite3-multiple-ciphers": "^12.6.2",
    "electron-store": "^11.0.2",
    "xlsx": "^0.18.5"
  },
  "build": {
    "appId": "com.passkey.wallet",
    "productName": "PassKey Wallet",
    "directories": {
      "output": "dist_app"
    },
    "files": [
      "dist-electron/**/*",
      "dist/**/*",
      "package.json",
      "public/**/*",
      "browser-extension/**/*"
    ],
    "publish": null,
    "asarUnpack": [
      "browser-extension"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "public/icon.png",
      "desktop": {
        "Icon": "passkey-wallet"
      }
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "public/icon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.utilities",
      "icon": "public/icon.png"
    }
  }
}